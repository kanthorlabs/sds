{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Program",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sds",
                    "--package=sds"
                ],
                "filter": {
                    "name": "sds",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit Tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sds",
                    "--package=sds"
                ],
                "filter": {
                    "name": "sds",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}